import Link from "./ui/link.astro";
---

<div
  class="bg-gray-900 hover:bg-gray-700 duration-200 px-4 md:px-16 lg:px-32 my-16 md:my-32 py-16 md:py-32 mx-4 md:mx-16 rounded-lg flex flex-col items-center text-center">
  <h2 class="text-white font-bold text-3xl md:text-5xl tracking-tight">
