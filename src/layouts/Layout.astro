---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Detailedfooter from "@components/detailed-footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource/inter/variable.css";
import '../styles/main.css';

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Jordan Pavey Photography - Gold Coast Photographer"
  : "Gold Coast based professional photographer, Jordan Pavey. Capturing brands vibrantly and covering live events.";
---


<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap.xml">
    
    <!-- preload custom font -->
    <link
    rel="preload"
    href="/fonts/Inconsolata-Variable.ttf"
    as="font"
    type="font/ttf"
    crossorigin
    />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Award-winning Gold Coast web design, brand strategy + marketing management all at a fixed price, pause anytime, with our Moonshot Plan."
      canonical={canonicalURL}
      twitter={{
        creator: "@aidenwood",
        site: "@aidxn.com",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Aidxn Design | web design, Brand strategy + marketing management`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Award-winning Gold Coast web design, brand strategy + marketing management all at a fixed price, pause anytime, with our Moonshot Plan.",
        },
      }}
    />

  <!-- aidxn.com property linked to search console for better SEO - Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-MN4T5PXYLD"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-MN4T5PXYLD');
    </script>
    
    <!-- Meta Pixel Code -->
    <script async>
      !function(f,b,e,v,n,t,s)
      {if(f.fbq)return;n=f.fbq=function(){n.callMethod?
      n.callMethod.apply(n,arguments):n.queue.push(arguments)};
      if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
      n.queue=[];t=b.createElement(e);t.async=!0;
      t.src=v;s=b.getElementsByTagName(e)[0];
      s.parentNode.insertBefore(t,s)}(window, document,'script',
      'https://connect.facebook.net/en_US/fbevents.js');
      fbq('init', '1456501161773389');
      fbq('track', 'PageView');
      </script>
      <noscript><img height="1" width="1" style="display:none"
      src="https://www.facebook.com/tr?id=1456501161773389&ev=PageView&noscript=1"
      /></noscript>
    <!-- End Meta Pixel Code -->
  </head>

  <style>
    html { max-width: 100vw; overflow-x: hidden; }
  </style>
  
  <body class="bg-black text-white">
    <Navbar />
    <slot />
    <Detailedfooter />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
